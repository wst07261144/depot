%h1 创建新商品
=form_for(@product) do |f|

  -if @product.errors.any?
    #error_explanation
      %h2
        =pluralize(@product.errors.count,'error')
      %ul
        -@product.errors.full_messages.each do |msg|
          %li
            =msg
  .field
    = f.label :商品名称
    = f.text_field :title
  .field
    = f.label :商品描述
    = f.text_area :description, :rows => 6
  .field
    = f.label :商品图片
    = f.text_field :image_url
  .field
    = f.label :单价
    = f.text_field :price
  .actions
    = f.submit "创建"

    = link_to '返回',root_path
